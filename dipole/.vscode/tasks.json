{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-build",
            "type": "shell",
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": ["-i", "-c"]
                }
            },
            "command": "setup-g4 && mkdir -p build && cd build && cmake ../ && cmake --build . -j$(nproc)",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}